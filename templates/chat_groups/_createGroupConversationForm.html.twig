{{ form_start(createGroupForm, { 'attr' : { 'class': ' messenger-window', 'action': path('app_chat_group_create') } }) }}
    <div class="card h-100 bg-light border-0">
        <div class="card-header messenger-card p-3">
            {{ form_widget(createGroupForm.friends) }}
            {{ form_widget(createGroupForm.conversationName) }}
            {{ form_widget(createGroupForm.senderId, {'attr': {'value': currentUserId}}) }}
        </div>
        <div class="card-body messenger-card list-group-msg-scroll">
        </div>
        <div class="card-footer messenger-card">
            <div class="input-group mb-3 mt-2">
                {{ form_widget(createGroupForm.message) }}
                <button class="btn btn-primary px-4" type="submit" id="button-addon2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
                        <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
{{ form_end(createGroupForm) }}



