{% if conversations %}
    {% for conversation in conversations %}
        {% set message = conversation.lastMessage.message %}
        <a type="button" id="conversation-{{ conversation.id }}" href="{{ path('app_chat_group', {conversationId: conversation.id}) }}"
            class="list-group-item text-start w-100 rounded btn-friend-msg-list ps-3 py-2
                {% if activeConversationId is defined and conversation.id == activeConversationId %}
                    border border-info border-4
                {% endif %}"
            value="{{ conversation.id }}">
            <div class="d-flex w-100">
                <h5 class="mb-1">{{ conversation.name }}</h5>
            </div>
            <p class="mb-1" id="conversation-{{ conversation.id }}-last-message">
                {% if conversation.lastMessage %}
                        {% if conversation.lastMessage.senderId == app.user.id %}
                            You:
                        {% else %}
                            {{ conversation.lastMessage.senderId | UserName }}:
                        {% endif %}
                        {{ message[:20] }}{% if message | length > 20 %}(...){% endif %}
                {% else %}
                    No messages yet
                {% endif %}
            </p>
        </a>
        {% if loop.index != loop.last %}
            <hr class="hr w-100"/>
        {% endif %}
    {% endfor %}
{% else %}
    No conversations found
{% endif %}