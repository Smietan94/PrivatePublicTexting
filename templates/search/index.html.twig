{% extends 'base.html.twig' %}

{% block title %}Search for new friends!{% endblock %}

{% block body %}
    <div class="container container-body container-shadow m-auto mt-5 p-5 bg-dark ">
        <h2 class="fw-bold mb-2 text-light">Find new friends</h2>
        <p class="text-white-50 mb-4">Please type username or email!</p>
        <div class="form-outline form-white" {{ stimulus_controller('search', {
            url: path(getRouteName('APP_SEARCH_USERS'))
        }) }}>
            {{ form_start(searchForm) }}
                <div class="input-group">
                    <span id="queryLabel" for="search_form_query" class="input-group-text bg-primary text-light">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                        </svg>
                    </span>
                    {{ form_widget(searchForm.query, { 'attr': {
                            'data-action': 'search#onSearchInput'
                        }})
                    }}
                </div>
            {{ form_end(searchForm) }}
            <div class="search" data-search-target="result">
            </div>
        </div>
    </div>
{% endblock %}