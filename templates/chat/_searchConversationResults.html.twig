{% if friends %}
    {% for friend in friends %}
        <a type="button" href="{{ path('app_chat', {friendId: friend.id}) }}"
            class="list-group-item text-start w-100 rounded btn-friend-msg-list ps-3 py-2"
            value="{{ friend.id }}">
            <div class="d-flex w-100">
                <h5 class="mb-1"><small class="fs-6">user name: <br> </small>{{ friend.username }}</h5>
            </div>
            <p class="mb-1">you: last message {# last message #}</p>
            {% if friend.status == 0 %}
                <small>active now</small>
            {% else %}
                <small>last seen: {{ friend.lastSeen | ago }}</small>
            {% endif %}
        </a>
        {% if loop.index != loop.last %}
            <hr class="hr w-100"/>
        {% endif %}
    {% endfor %}
{% else %}
    <h5 class="mb-1">Friend not found</h5>
{% endif %}