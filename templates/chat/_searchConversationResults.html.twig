{% if convData %}
    {% for conversation in convData %}
        <a type="button" href="{{ path('app_chat', {friendId: conversation.friend.id}) }}"
            class="list-group-item text-start w-100 rounded btn-friend-msg-list ps-3 py-2"
            value="{{ conversation.friend.id }}">
            <div class="d-flex w-100">
                <h5 class="mb-1">{{ conversation.friend.username }}</h5>
            </div>
            <p class="mb-1">
                {% set lastMessage = conversation.conversation.lastMessage %}
                {% if lastMessage %}
                    {% if lastMessage.senderId == currentUserId%}
                        You:
                    {% else %}
                        {{ lastMessage.senderId | UserName }}:
                    {% endif %}
                        {{ lastMessage.message }}
                {% else %}
                    No messages yet
                {% endif %}
            </p>
            {% if conversation.friend.status == 0 %}
                <small>active now</small>
            {% else %}
                <small>last seen: {{ conversation.friend.lastSeen | ago }}</small>
            {% endif %}
        </a>
        {% if loop.index != loop.last %}
            <hr class="hr w-100"/>
        {% endif %}
    {% endfor %}
{% else %}
    <h5 class="mb-1">Friend not found</h5>
{% endif %}
