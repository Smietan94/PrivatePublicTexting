<div id="flash-container" class="container flash-container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show container-shadow" role="alert">
            {{ message | upper }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning alert-dismissible fade show container-shadow" role="alert">
            {{ message | upper }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show container-shadow" role="alert">
            {{ message | upper }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
</div>