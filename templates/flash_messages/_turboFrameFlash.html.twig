<div class="container flash-container">
    {% for message in app.flashes('turboSuccess') %}
        <div class="alert alert-success alert-dismissible fade show container-shadow" role="alert">
            {{ message | upper }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    {% for message in app.flashes('turboWarning') %}
        <div class="alert alert-warning alert-dismissible fade show container-shadow" role="alert">
            {{ message | upper }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    {% for message in app.flashes('turboError') %}
        <div class="alert alert-danger alert-dismissible fade show container-shadow" role="alert">
            {{ message | upper }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
</div>